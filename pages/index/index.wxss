.search {
    display: -webkit-flex;
    display: flex;
    align-items: center;
    width: 86%;
    height: 65rpx;
    padding: 0rpx 0;
    margin: 20rpx auto;
    border: 1px solid #d8d8d8;
    border-radius: 16rpx;
    background: #fff;
    color: #d8d8d8;
}

.search image {
    width: 40rpx;
    height: 40rpx;
    margin: 0 10rpx;
}
.search input{
 width: 80%;
 color: #999;
}
.search .searchBth{
  position: relative;
  right: -2px;
  line-height: 60rpx;
  text-align: center;
  padding:1px;
  border-top-right-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  background: #d8d8d8;
}

.specialPrice {
    padding: 0 30rpx;
}

.title {
    margin: 20rpx 0;
    border-bottom: 1px solid #d8d8d8;
    padding-bottom: 10rpx;
    font-size: 36rpx;
    font-weight: bold;
}

.goodsList {
    padding: 20rpx;
    border-bottom: 1px solid #d8d8d8;
    display: -webkit-flex;
    display: flex;
}

.goodsList:last-child {
    border-bottom: none;
}

.goodsList .goodsPic {
    width: 180rpx;
    height: 180rpx;
    border: 1px solid #d8d8d8;
}

.goodsInfo {
    padding: 0 20rpx;
    position: relative;
    flex: 1;
}

.goodsTitle {
    font-size: 32rpx;
    font-family: '微软雅黑';
}

.price {
    position: absolute;
    left: 20rpx;
    bottom: 0;
    width: 100%;
    display: -webkit-flex;
    display: flex;
    align-items: flex-end;
}

.price .newPrice {
    font-size: 36rpx;
    color: #e4452a;
    margin-top: 10rpx;
    margin-right: 10rpx;
}

.price .oldPrice {
    text-decoration: line-through;
    color: #d8d8d8;
    font-size: 28rpx;
    margin-top: 20rpx;
    align-items: -webkit-flex-end;
}

.price view {
  flex: 1;
  position: absolute;
  right: 5px;
}
.my_icon{
  margin-top:3px;
  margin-left: 3px;
  font-size: 46rpx;
  color: #fff;
}
.car1 {
    width: 60rpx;
    height: 60rpx;
    background: #50a7e4;
    border-radius: 50%;
}